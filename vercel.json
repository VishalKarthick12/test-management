{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/browser"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://ltts-test-management-backend.onrender.com/api/$1"
        },
        {
            "source": "/((?!api|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}